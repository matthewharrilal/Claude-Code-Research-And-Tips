{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pipeline Run Summary",
  "description": "Structured summary of a single pipeline run, auto-generated at pipeline end.",
  "type": "object",
  "required": ["buildMetadata", "scores", "gates", "verdict"],
  "properties": {
    "buildMetadata": {
      "type": "object",
      "required": ["slug", "date", "contentPath"],
      "properties": {
        "slug": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "contentPath": { "type": "string" },
        "duration": { "type": "string", "description": "HH:MM:SS format" },
        "builderModel": { "type": "string", "enum": ["Opus", "Sonnet"] },
        "mode": { "type": "string", "enum": ["APPLIED", "COMPOSED"] }
      }
    },
    "scores": {
      "type": "object",
      "properties": {
        "pa05Initial": { "type": "number", "minimum": 0, "maximum": 4 },
        "pa05Final": { "type": "number", "minimum": 0, "maximum": 4 },
        "tier5": { "type": "number", "minimum": 0, "maximum": 9 }
      }
    },
    "gates": {
      "type": "object",
      "properties": {
        "total": { "type": "integer" },
        "pass": { "type": "integer" },
        "fail": { "type": "integer" },
        "skip": { "type": "integer" },
        "gr48": { "type": "string", "enum": ["PASS", "FAIL"] },
        "failedGateIds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "triageResults": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "gateId": { "type": "string" },
              "triage": { "type": "string", "enum": ["INTENTIONAL", "FALSE-POS", "GENUINE"] },
              "notes": { "type": "string" }
            }
          }
        }
      }
    },
    "compression": {
      "type": "object",
      "properties": {
        "recipeLines": { "type": "integer" },
        "briefTier3Lines": { "type": "integer" },
        "ratio": { "type": "number" }
      }
    },
    "refine": {
      "type": "object",
      "properties": {
        "applied": { "type": "boolean" },
        "pa05Delta": { "type": "number" },
        "cssLinesDelta": { "type": "integer" }
      }
    },
    "agents": {
      "type": "object",
      "properties": {
        "totalSpawned": { "type": "integer" },
        "totalRespawns": { "type": "integer" },
        "respawnReasons": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "verdict": {
      "type": "string",
      "enum": ["SHIP", "SHIP WITH FIXES", "REFINE", "REBUILD"]
    },
    "outputFiles": {
      "type": "object",
      "properties": {
        "contentMap": { "type": "string" },
        "executionBrief": { "type": "string" },
        "htmlArtifact": { "type": "string" },
        "gateResultsJson": { "type": "string" },
        "screenshotsDir": { "type": "string" },
        "paReports": { "type": "array", "items": { "type": "string" } },
        "integrativeReport": { "type": "string" },
        "weaverDiagnostic": { "type": "string" },
        "weaverArtistic": { "type": "string" }
      }
    }
  }
}

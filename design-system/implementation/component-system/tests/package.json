{
  "name": "component-system-tests",
  "version": "1.0.0",
  "description": "Playwright test suite for Phase 3.5 Editorial Design Component System",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:update-snapshots": "npx playwright test --update-snapshots",
    "test:soul": "npx playwright test soul-principles.spec.ts",
    "test:anti": "npx playwright test anti-pattern.spec.ts",
    "test:components": "npx playwright test --grep-invert 'soul-principles|anti-pattern'",
    "install:browsers": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "serve": "^14.2.5",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "editorial-design",
    "component-system"
  ],
  "author": "Component System Team",
  "license": "MIT"
}
